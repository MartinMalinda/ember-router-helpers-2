<h2 id="title">Ember-Router-Helpers</h2>
<div>
  {{#with (url-for "asia") as |url|}}
    <a
      class={{if (is-active url) "active"}}
      data-test-link-asia
      href={{url}} onclick={{transition-to}}>Asia</a>
  {{/with}}
</div>

<div>
  {{#with (url-for "europe" "Rome" (query-params firstTime=true)) as |url|}}
    <a
      class={{if (is-active url) "active"}}
      data-test-link-rome-first-time
      href={{url}} onclick={{transition-to}}>Rome</a>
  {{/with}}

  {{#with (url-for "europe" "Helsinki" (query-params firstTime=false)) as |url|}}
    <a
      class={{if (is-active url) "active"}}
      data-test-link-helsinki
      href={{url}} onclick={{transition-to}}>Helsinki</a>
  {{/with}}

  {{#with (url-for "europe" "Helsinki" (query-params firstTime=true)) as |url|}}
    <a
      class={{if (is-active url) "active"}}
      data-test-link-helsinki-first-time
      href={{url}} onclick={{transition-to}}>Helsinki (F)</a>
  {{/with}}

  {{#with (url-for "europe" "Prague" (query-params firstTime=true)) as |url|}}
    <a
      class={{if (is-active url) "active"}}
      data-test-link-prague-first-time
      href={{url}} onclick={{transition-to}}>Prague</a>
  {{/with}}
</div>
<div>
  {{#with (url-for "america") as |url|}}
    <a
      class={{if (is-active url) "active"}}
      data-test-link-america
      href={{url}} onclick={{transition-to}}>America</a>
  {{/with}}
  |
  {{#with (url-for "america.south") as |url|}}
    <a
      class={{if (is-active url) "active"}}
      data-test-link-south-america
      href={{url}} onclick={{transition-to}}>South America</a>
  {{/with}}
</div>

<div>
    <a
      class={{if (is-active "europe" "Paris" (query-params firstTime=true)) "active"}}
      data-test-link-paris-explicit
      {{action (transition-to "europe" "Paris" (query-params firstTime=true))}}>Paris (F)</a>

    <a
      class={{if (is-active "europe" "Paris" (query-params firstTime=false)) "active"}}
      data-test-link-paris-explicit
      {{action (transition-to "europe" "Paris" (query-params firstTime=false))}}>Paris</a>
</div>

<div>
</div>

<div>
  {{outlet}}
</div>